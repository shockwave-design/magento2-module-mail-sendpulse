<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="smtp">
                <field id="sendpulse_domain" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sendpulse domain</label>
                    <comment><![CDATA[example.com]]></comment>
                    <depends>
                        <field id="type">sendpulse</field>
                    </depends>
                    <source_model>Shockwavedesign\Mail\Sendpulse\Model\Config\Source\Sendpulse\Domains</source_model>
                </field>

                <field id="sendpulse_key" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sendpulse key</label>
                    <comment><![CDATA[key-...]]></comment>
                    <depends>
                        <field id="type">sendpulse</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>

